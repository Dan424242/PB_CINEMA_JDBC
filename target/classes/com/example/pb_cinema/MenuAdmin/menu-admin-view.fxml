<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pb_cinema.MenuAdmin.MenuAdminController">
    <children>
        <VBox fx:id="BackgroundScreen" alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="25.0" stylesheets="@../style/style.css">
            <children>
                <Label fx:id="CinemaAssistantLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="259.0" prefWidth="800.0" text="KINO&#10;ASYSTENT" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <font>
                        <Font name="LoveloBlack" size="29.0" />
                    </font>
                </Label>
                <Button fx:id="RoomCreatorButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="50.0" prefWidth="350.0" text="Kreator Sal" textAlignment="CENTER">
                    <font>
                        <Font name="LoveloBlack" size="20.0" />
                    </font>
                </Button>
                <Button fx:id="RepertuarCreatorButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onRepertoireEditorClicked" prefHeight="50.0" prefWidth="350.0" text="Tworzenie repertuaru" textAlignment="CENTER">
                    <font>
                        <Font name="LoveloBlack" size="20.0" />
                    </font>
                </Button>
            <Button fx:id="MoviesListCreatorButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onMoviesListClicked" prefHeight="50.0" prefWidth="350.0" text="Lista filmów" textAlignment="CENTER">
               <font>
                  <Font name="LoveloBlack" size="20.0" />
               </font>
            </Button>
            <Button fx:id="ReservationListButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="50.0" prefWidth="350.0" text="Lista rezerwacji" textAlignment="CENTER">
               <font>
                  <Font name="LoveloBlack" size="20.0" />
               </font>
            </Button>
            <Button fx:id="AdminListButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="50.0" prefWidth="350.0" text="Użytkownicy" textAlignment="CENTER">
               <font>
                  <Font name="LoveloBlack" size="20.0" />
               </font>
            </Button>
            <Button fx:id="LogoutButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onLogoutButtonClicked" prefHeight="50.0" prefWidth="350.0" text="Wyloguj się" textAlignment="CENTER">
               <font>
                  <Font name="LoveloBlack" size="20.0" />
               </font>
            </Button>
            </children></VBox>
        <AnchorPane prefHeight="50.0" prefWidth="465.0" AnchorPane.bottomAnchor="720.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox fx:id="WindowBar" alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="1200.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Button fx:id="MinimizeButton" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0" text="_" />
                        <Button fx:id="ExitButton" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0" text="X">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
